@model List<twtodos.Models.Todo>

<h1> @ViewData["Title"]</h1>

@if( Model.Count > 0) {
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Titulo</th>
            <th>Criado em</th>
            <th>Data de entrega</th>
            <th>Finalizado em</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model){
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.CreatedAt</td>
                <td>@todo.Deadline</td>
                <td>@(todo.FinishedAt.HasValue ? todo.FinishedAt : " Aguardando ")</td>
                <td class="text-center">
                    <button class="btn btn-warning">
                        <i class="text-white bi bi-pencil-square"></i>
                    </button>
                    <button class="btn btn-primary"><i class="bi bi-text-center"></i></button>
                    <button class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
}else{
    <br />
    <br />
    <h3 class="text-center">Nenhum registro no banco.</h3>
    <br />
    <br />
}

<a href="/Todo/Create"> </a>
<a asp-controller="Todo" asp-action="Create">
    <button class="btn btn-outline-success" > <i class="bi bi-star-fill"></i> </button>
</a>